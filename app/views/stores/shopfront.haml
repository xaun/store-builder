#store-page-container
  %nav
    #top-main-bar
      %h1= @store.store_name
      #top-main-bar-links
        %ul
          %li.link-3
            %a{:href => "#"} About
          %li.link-2
            %a{:href => "#"} Contact Us
          %li.link-1
            %a{:href => "#"} Login

    #top-selection-bar

  / Cheeky hidden div gets the store_id from the 'stores#shopfront' params[:id].
  / This makes it easy get the store_id from the DOM, and filter my db queries.
  .store_id{:style => 'display: none;'}= @store.id

  #store-main


// ------   BACKBONE TEMPLATES ------ //

%script{:type => 'text/handlebars-template', :id => 'all-products-template'}
  .row
    {{#each products}}
    %div{:class => 'col-xs-6 col-md-4', :id => 'grid-columns', :style => 'padding: 0px;'}
      #product-icons-top-dropdown
      = link_to(image_tag('{{image}}', :class => 'product-image', :title => '{{title}}'), '#')
      #product-icons-bot-dropdown
    {{/each}}

%script{:type => 'text/handlebars-template', :id => 'product-template'}

